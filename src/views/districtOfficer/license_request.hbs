{{#section 'js'}}
    <script src="/static/js/wardOfficer/license_request.js"></script>
{{/section}}

<div class="custom-container">
    <div class="card">
        <div class="custom-card">
            <h5 class="card-header">Danh sách các yêu cầu cấp phép quảng cáo của phường</h5> 
        </div>
    </div>

    <div>
        <div class="list card mt-5">
            <h5 class="card-header d-flex justify-content-between align-items-center">
                Xem danh sách
                <a href="license-request/add" class="d-flex btn btn-outline-info" role="button">
                    <img src="/static/images/departmentOfficer/icon-add.png" width="24" height="24" alt="add a license request">
                    <span class="ml-1">Thêm một yêu cầu</span>
                </a>
            </h5>
            {{#if empty}}
                <div class="card-body">Không có dữ liệu</div>
            {{else}}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 2%">#</th>
                            <th scope="col" style="width: 12%">Địa chỉ</th>
                            <th scope="col" style="width: 8%">Loại bảng</th>
                            <th scope="col" style="width: 9%">Kích thước</th>
                            <th scope="col" style="width: 8%">Hình thức</th>
                            <th scope="col" style="width: 8%">Phân loại</th>
                            <th scope="col" style="width: 12%">Nội dung và ảnh</th>
                            <th scope="col" style="width: 22%">Thông tin LH</th>
                            <th scope="col" style="width: 10%">Thời gian</th>
                            <th scope="col" style="width: 9%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each license_request}}
                            <tr>
                                <th scope="row">{{stt}}</th>
                                <td>{{ads_location_name}}</td>
                                <td>{{ads_panel_type_name}}</td>
                                <td>{{width}}m x {{height}}m</td>
                                <td>{{ads_type_name}}</td>
                                <td>{{ads_location_type_name}}</td>
                                <td>{{content}} - Ảnh: {{img_link}}</td>
                                {{!-- <td>{{img_link}}</td> --}}
                                {{!-- <td>{{nameCompany}}</td> --}}
                                <td>Tên công ty: {{nameCompany}} - Địa chỉ: {{locationCompany}} - Email: {{emailCompany}} - Số ĐT: {{phoneCompany}}</td>
                                <td>{{startDate}} - {{endDate}}</td>
                                <td>
                                    {{#if (equal status 'Chưa duyệt')}}
                                        <div class="d-flex justify-content-center" style="margin-right: 10px;">
                                            <a class="btn btn-sm btn-outline-info" data-id="{{licenseRequestId}}" data-value="{{adsPanelId}}" id="cancel-{{licenseRequestId}}" role="button">
                                                <img src="/static/images/departmentOfficer/icon-cancel.png" width="24" height="24" alt="cancel this request">
                                            </a>
                                        </div>
                                    {{/if}}
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{/if}}
            <div class="card-footer text-muted font-italic">
                <span class="small" id="dateSpan">{{date}}</span>
            </div>
        </div>
    </div>
    <div class="mt-3 d-flex justify-content-center">
        <div>
            <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="?page={{previousValue}}">Previous</a>
            </li>
            {{#each this.pageNumbers}}
            {{#if isActive}}
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="#">{{value}}</a>
            </li>
            {{else}}
            <li class="page-item">
                <a class="page-link" href="?page={{value}}">{{value}}</a>
            </li>
            {{/if}}
            {{/each}}
            <li class="page-item">
                <a class="page-link" href="?page={{nextValue}}">Next</a>
            </li>
            </ul>
        </div>
    </div>
</div>