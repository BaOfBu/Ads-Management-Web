{{#section 'js'}}
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
    </script>
{{/section}}

{{#section 'css'}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

<div class="custom-container">
    <form action="" method="post" id="frmRegister">
        <div class="card">
            <h5 class="card-header">
            Tạo tài khoản cho các cán bộ Phường, Quận
            </h5>
            <div class="card-body">
                <h5>Thông tin tài khoản</h5>
                <div class="form-group">
                    <label for="txtUsername">Tên đăng nhập</label>
                    <input type="text" name="username" id="txtUsername" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <label for="txtPassword">Mật khẩu</label>
                    <input type="password" name="raw_password" id="txtPassword" class="form-control">
                </div>
                <div class="form-group">
                    <label for="txtConfirm">Nhập lại mật khẩu</label>
                    <input type="password" name="confirm_password" id="txtConfirm" class="form-control">
                </div>

                <h5>Thông tin cá nhân</h5>
                <div class="form-group">
                    <label for="txtName">Họ và tên</label>
                    <input type="text" name="name" id="txtName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="txtEmail">Email</label>
                    <input type="text" name="email" id="txtEmail" class="form-control">
                </div>
                <div class="form-group">
                    <label for="txtDoB">Ngày sinh</label>
                    <input type="text" name="raw_dob" id="txtDoB" class="form-control">
                </div>
                <div class="form-group">
                    <label for="txtPhone">Số điện thoại</label>
                    <input type="text" name="phone" id="txtPhone" class="form-control">
                </div>

                <h5>Khu vực quản lý</h5>
                <div class="form-group">
                    <div class="d-flex">
                        <div class="role">
                            <label>Vai trò</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="Phường" id="flexRadioDefault" name="role" checked>
                                <label class="form-check-label" for="flexRadioDefault">
                                    Cán bộ phường
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="Quận" id="flexRadioChecked" name="role">
                                <label class="form-check-label" for="flexRadioChecked">
                                    Cán bộ quận
                                </label>
                            </div>

                            <div class="area d-flex mt-3">
                                <div class="ward">
                                    <label for="dropdownWard">Phường</label>
                                    <button class="form-control dropdown-toggle" type="button" id="dropdownWard" data-toggle="dropdown" aria-expanded="false">
                                    Phường
                                    </button>
                                    <input id="selectedWard" name="ward" type="hidden"></input>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownWard">
                                        <li><a class="dropdown-item" data-value="1">1</a></li>
                                        <li><a class="dropdown-item" data-value="2">2</a></li>
                                        {{#each ward}}
                                            <li><a class="dropdown-item" data-value="{{name}}">{{name}}</a></li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <div class="district ml-5">
                                    <label for="dropdownDistrict">Quận</label>
                                    <button class="form-control dropdown-toggle" type="button" id="dropdownDistrict" data-toggle="dropdown" aria-expanded="false">
                                    Quận
                                    </button>
                                    <input id="selectedDistrict" name="district" type="hidden"></input>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownDistrict">
                                        <li><a class="dropdown-item" data-value="1">1</a></li>
                                        <li><a class="dropdown-item" data-value="2">2</a></li>
                                        {{#each district}}
                                            <li><a class="dropdown-item" data-value="{{name}}">{{name}}</a></li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check2"></i>
                    Save
                </button>
            </div>
        </div>
    </form>
</div>