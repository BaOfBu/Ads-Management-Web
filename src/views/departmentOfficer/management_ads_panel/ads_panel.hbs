<div class="custom-container">
    <div class="card">
        <div class="custom-card">
            <h5 class="card-header">Danh sách các bảng quảng cáo của thành phố Hồ Chí Minh</h5> 
        </div>
    </div>
    <div class="d-flex justify-content-end mt-5">
        {{!-- <a href="district/add" class="d-flex btn btn-outline-info" role="button">
            <img src="/static/images/departmentOfficer/icon-add.png" width="24" height="24" alt="add a district">
            <span class="ml-1">Thêm một quận</span>
        </a> --}}
        <a href="ads-panel/add" role="button" class="d-flex btn btn-outline-info">
            <img src="/static/images/departmentOfficer/icon-add.png" width="24" height="24" alt="add a panel">
            <span class="ml-1">Thêm một bảng</span>
        </a>
    </div>
    <div>
        <div class="card mt-5">
        <h5 class="card-header">Xem danh sách</h5>
        {{#if empty}}
            <div class="card-body">Không có dữ liệu</div>
        {{else}}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" class="col-1">#</th>
                    <th scope="col" class="col-3">Địa chỉ</th>
                    <th scope="col" class="col-3">Loại bảng quảng cáo</th>
                    <th scope="col" class="col-2">Kích thước</th>
                    <th scope="col" class="col-1"></th>
                    <th scope="col" class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                {{#each ads_panels}}
                <tr>
                    <th scope="row">{{stt}}</th>
                    <td>{{ads_location_name}}</td>
                    <td>{{ads_panel_type_name}}</td>
                    <td>{{width}}m x {{height}}m</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-sm btn-outline-info" href="ads-panel/edit?adsPanelId={{adsPanelId}}&stt={{stt}}" role="button">
                                <img src="/static/images/departmentOfficer/icon-edit.png" width="24" height="24" alt="edit this row">
                            </a>
                        </div>
                    </td>
                    <td class="d-flex">
                        <div>
                            <a class="d-flex view-detail mt-1" href="ads-panel/view-detail?adsPanelId={{adsPanelId}}&stt={{stt}}" role="button">
                                <img src="/static/images/departmentOfficer/icon-view-detail.png" width="24" height="24" alt="view detail">
                                <span class="ml-1">Xem chi tiết</span>    
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
        <div class="card-footer text-muted font-italic">
            <span class="small">{{date}}</span>
        </div>
    </div>
</div>