<div class="custom-container">
    <form method="post" action="">
        <div class="card">
            <h5 class="card-header">
            Xem chi tiết tài khoản cán bộ
            </h5>
            <div class="card-body">
                <h5><b>Thông tin tài khoản</b></h5>
                <div class="mb-3">
                    <label for="username" class="form-label">Tên tài khoản</label>
                    <input type="text" class="form-control" id="username" disabled value="{{this.account.username}}" />
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" id="name" disabled value="{{this.account.name}}" />
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Ngày sinh</label>
                    <input type="text" class="form-control" id="name" disabled value="{{this.account.dob}}" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" disabled value="{{this.account.email}}" />
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="name" disabled value="{{this.account.phone}}" />
                </div>
                <div class="mb-3">
                    <label for="role" class="form-label">Chức năng</label>
                    <select id="roleSelect" class="form-select" aria-label="Default select example">
                        <option value="Cán bộ quận" {{#if (equal this.account.role "quận")}}selected{{/if}}>Cán bộ quận</option>
                        <option value="Cán bộ phường" {{#if (equal this.account.role "phường")}}selected{{/if}}>Cán bộ phường</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="role" class="form-label">Quận</label>
                    <select class="form-select" aria-label="Default select example" id="district">
                        {{#each district}}
                            {{#if (equal this.name ../account.districtName)}}
                                <option value="{{this.name}}" selected>Quận {{this.name}}</option>
                            {{else}}
                                <option value="{{this.name}}">Quận {{this.name}}</option>
                            {{/if}}
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3" id="wardBlock">
                    <label for="role" class="form-label">Phường</label>
                    <select class="form-select" aria-label="Default select example" id="ward">
                    </select>
                </div>
            </div>
             <div class="card-footer">
                <button type="submit" class="btn btn-primary" id="update-btn">Cập nhật</button>
            </div>
        </div>    
    </form>
</div>