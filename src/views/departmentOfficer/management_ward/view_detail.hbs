<div class="custom-container">
    <form action="" method="post">
        <div class="card">
            <h5 class="card-header">
            Xem chi tiết phường
            </h5>
            <div class="card-body">
                <div class="form-group">
                    <label for="txtWardID">#</label>
                    <input type="text" id="txtWardID" class="form-control" readonly value="{{wardId}}">
                </div>
                <div class="form-group">
                    <label for="txtName">Tên phường</label>
                    <input type="text" id="txtName" class="form-control" readonly value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="txtDescription">Mô tả</label>
                    <textarea class="form-control" id="txtDescription" rows="3" readonly value="{{description}}"></textarea>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-outline-success" href="/department-officer/ward?districtId={{districtId}}" role="button">
                    <i class="bi bi-skip-backward-fill"></i>
                    Danh sách
                </a>
            </div>
        </div>
    </form>
</div>