{{#section 'js'}}
    <script src="/static/js/departmentOfficer/management_ward/add.js"></script>
{{/section}}

<div class="custom-container">
    <form action="" method="post" id="frmAdd">
        <div class="card">
            <h5 class="card-header">
            Thêm phường mới
            </h5>
            <div class="card-body">
                <div class="form-group">
                    <label for="txtName">Tên phường</label>
                    <div class="input-group has-validation">
                        <input type="text" name="name" id="txtName" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                        <div id="checkValidationEmptyName" class="invalid-feedback">
                            Vui lòng không để trống mục này
                        </div>
                        <div id="checkValidationName" class="invalid-feedback">
                            Vui lòng nhập tên quận không quá 50 kí tự
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtDescription">Mô tả</label>
                    <textarea class="form-control" name="description" id="txtDescription" rows="3"></textarea>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-outline-success" href="/department-officer/ward?districtId={{districtId}}" role="button">
                    <i class="bi bi-skip-backward-fill"></i>
                    Danh sách
                </a>
                <button id="submitButton" type="submit" class="btn btn-primary">
                    <i class="bi bi-check2"></i>
                    Lưu
                </button>
                <input id="selectedDistrict" name="districtId" type="hidden" value="{{districtId}}"></input>
            </div>
        </div>
    </form>
</div>