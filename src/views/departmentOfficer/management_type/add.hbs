{{#section 'js'}}
    <script src="/static/js/departmentOfficer/management_type/add.js"></script>
{{/section}}

<div class="custom-container">
    <form action="" method="post" id="frmAdd">
        <div class="card">
            <h5 class="card-header">
            Thêm {{typeName}} mới
            </h5>
            <div class="card-body">
                <input type="hidden" name="choice" value="{{choice}}" id="choice">
                <div class="form-group">
                    {{#if (equal choice 'location-type')}}
                        <label for="txtName">Loại vị trí</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" id="txtName" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập loại vị trí không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}}

                    {{#if (equal choice 'ads-type')}}
                        <label for="txtName">Hình thức quảng cáo</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" id="txtName" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập hình thức quảng cáo không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}} 
                    
                    {{#if (equal choice 'ads-panel-type')}}
                        <label for="txtName">Loại bảng quảng cáo</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" id="txtName" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập loại bảng quảng cáo không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}}        

                    {{#if (equal choice 'report-type')}}
                        <label for="txtName">Hình thức báo cáo</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" id="txtName" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập hình thức báo cáo không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}}   
                </div>
                <div class="form-group">
                    <label for="txtDescription">Mô tả</label>
                    <textarea class="form-control" name="description" id="txtDescription" rows="3"></textarea>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-outline-success" href="/department-officer/provided-info/{{choice}}" role="button">
                    <i class="bi bi-skip-backward-fill"></i>
                    Danh sách
                </a>
                <button id="submitButton" type="submit" class="btn btn-primary">
                    <i class="bi bi-check2"></i>
                    Lưu
                </button>
            </div>
        </div>
    </form>
</div>