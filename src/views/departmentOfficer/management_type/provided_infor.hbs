{{#section 'js'}}
    <script src="/static/js/departmentOfficer/management_type/list.js"></script>
{{/section}}

<div class="custom-container">
    <div class="card">
        <div class="custom-card">
            <h4 class="card-header d-flex justify-content-center">Thông tin cung cấp</h4> 
        </div>
    </div>

    <div class="d-flex mt-3 justify-content-end">
        <div class="types" style="margin-right: 10px;">
            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownChoice" data-toggle="dropdown" aria-expanded="false">
            {{infoCurrent}}
            </button>
            <input type="hidden" id="selectedChoice" value="{{choice}}">
            <ul class="dropdown-menu" aria-labelledby="dropdownChoice" style="max-height: 500px; overflow-y: auto;">
                {{#each providedInfo}}
                    <li><a class="dropdown-item" href="/department-officer/provided-info/{{choice}}" data-value="{{name}}" data-id="{{choice}}">{{name}}</a></li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div>
        <div class="card mt-3">
            <h5 class="card-header d-flex justify-content-between align-items-center ">
                Xem danh sách các {{title}}
                <a href="add/{{choice}}" class="d-flex btn btn-outline-info" role="button">
                    <img src="/static/images/departmentOfficer/icon-add.png" width="24" height="24" alt="add a type">
                    <span class="ml-1">Thêm một {{type}}</span>
                </a>
            </h5>
            {{#if empty}}
                <div class="card-body">Không có dữ liệu</div>
            {{else}}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="col-1">#</th>
                            <th scope="col" class="col-3">
                                {{#if (equal choice 'location-type')}}
                                    Loại vị trí
                                {{/if}}

                                {{#if (equal choice 'ads-type')}}
                                     Hình thức quảng cáo
                                {{/if}} 
                                
                                {{#if (equal choice 'ads-panel-type')}}
                                     Loại bảng quảng cáo
                                {{/if}}        

                                {{#if (equal choice 'report-type')}}
                                     Hình thức báo cáo
                                {{/if}}      
                            </th>
                            <th scope="col" class="col-5">Mô tả</th>
                            <th scope="col" class="col-1"></th>
                            <th scope="col" class="col-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each information}}
                        <tr>
                            <th scope="row">{{stt}}</th>
                            <td>{{name}}</td>
                            <td>{{description}}</td>
                            <td>
                                {{#if (equal choice 'location-type')}}
                                    <div class="d-flex justify-content-center">
                                        <a class="btn btn-sm btn-outline-info" href="edit/{{choice}}?id={{locationTypeId}}&stt={{stt}}" role="button">
                                            <img src="/static/images/departmentOfficer/icon-edit.png" width="24" height="24" alt="edit this row">
                                        </a>
                                    </div>
                                {{/if}}

                                {{#if (equal choice 'ads-type')}}
                                    <div class="d-flex justify-content-center">
                                        <a class="btn btn-sm btn-outline-info" href="edit/{{choice}}?id={{adsTypeId}}&stt={{stt}}" role="button">
                                            <img src="/static/images/departmentOfficer/icon-edit.png" width="24" height="24" alt="edit this row">
                                        </a>
                                    </div>
                                {{/if}}
                                
                                {{#if (equal choice 'ads-panel-type')}}
                                    <div class="d-flex justify-content-center">
                                        <a class="btn btn-sm btn-outline-info" href="edit/{{choice}}?id={{adsPanelTypeId}}&stt={{stt}}" role="button">
                                            <img src="/static/images/departmentOfficer/icon-edit.png" width="24" height="24" alt="edit this row">
                                        </a>
                                    </div>
                                {{/if}}

                                {{#if (equal choice 'report-type')}}
                                    <div class="d-flex justify-content-center">
                                        <a class="btn btn-sm btn-outline-info" href="edit/{{choice}}?id={{reportTypeId}}&stt={{stt}}" role="button">
                                            <img src="/static/images/departmentOfficer/icon-edit.png" width="24" height="24" alt="edit this row">
                                        </a>
                                    </div>
                                {{/if}}
                            </td>
                            <td class="d-flex">
                                {{#if (equal choice 'location-type')}}
                                    <a class="d-flex view-detail mt-1" href="view-detail/{{choice}}?locationType={{locationTypeId}}&stt={{stt}}" role="button">
                                        <img src="/static/images/departmentOfficer/icon-view-detail.png" width="24" height="24" alt="view detail">
                                        <span class="ml-1">Xem chi tiết</span>
                                    </a>   
                                {{/if}}

                                {{#if (equal choice 'ads-type')}}
                                    <a class="d-flex view-detail mt-1" href="view-detail/{{choice}}?adsType={{adsTypeId}}&stt={{stt}}" role="button">
                                        <img src="/static/images/departmentOfficer/icon-view-detail.png" width="24" height="24" alt="view detail">
                                        <span class="ml-1">Xem chi tiết</span>
                                    </a>   
                                {{/if}}

                                {{#if (equal choice 'ads-panel-type')}}
                                    <a class="d-flex view-detail mt-1" href="view-detail/{{choice}}?adsPanelType={{adsPanelTypeId}}&stt={{stt}}" role="button">
                                        <img src="/static/images/departmentOfficer/icon-view-detail.png" width="24" height="24" alt="view detail">
                                        <span class="ml-1">Xem chi tiết</span>
                                    </a>   
                                {{/if}}

                                {{#if (equal choice 'report-type')}}
                                    <a class="d-flex view-detail mt-1" href="view-detail/{{choice}}?reportType={{reportTypeId}}&stt={{stt}}" role="button">
                                        <img src="/static/images/departmentOfficer/icon-view-detail.png" width="24" height="24" alt="view detail">
                                        <span class="ml-1">Xem chi tiết</span>
                                    </a>   
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{/if}}

            <div class="card-footer text-muted font-italic">
                <span class="small">{{date}}</span>
            </div>
        </div>
    </div>
</div>