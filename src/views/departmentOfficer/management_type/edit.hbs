{{#section 'js'}}
    <script src="/static/js/departmentOfficer/management_type/edit.js"></script>
{{/section}}

<div class="custom-container">
    <form action="" method="post" id="frmEdit">
        <div class="card">
            <h5 class="card-header">
            Chỉnh sửa thông tin {{typeName}}
            </h5>
            <div class="card-body">
                <input type="hidden" name="choice" id="choice" value="{{choice}}">
                <input type="hidden" name="id" value="{{id}}">
                <div class="form-group">
                    <label for="txtStt">#</label>
                    <input type="text" id="txtStt" class="form-control" readonly value="{{stt}}">
                </div>
                <div class="form-group">
                    {{#if (equal choice 'location-type')}}
                        <label for="txtName">Loại vị trí</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" value="{{type.name}}" id="txtName" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập loại vị trí không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}}

                    {{#if (equal choice 'ads-type')}}
                        <label for="txtName">Hình thức quảng cáo</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" id="txtName" value="{{type.name}}" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập hình thức quảng cáo không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}} 
                    
                    {{#if (equal choice 'ads-panel-type')}}
                        <label for="txtName">Loại bảng quảng cáo</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" id="txtName" value="{{type.name}}" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập loại bảng quảng cáo không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}}        

                    {{#if (equal choice 'report-type')}}
                        <label for="txtName">Hình thức báo cáo</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" value="{{type.name}}" id="txtName" class="form-control is-invalid" aria-describedby="checkValidationName checkValidationEmptyName" autofocus required>
                            <div id="checkValidationEmptyName" class="invalid-feedback">
                                Vui lòng không để trống mục này
                            </div>
                            <div id="checkValidationName" class="invalid-feedback">
                                Vui lòng nhập hình thức báo cáo không quá 50 kí tự
                            </div>
                        </div>
                    {{/if}}  
                </div>
                <div class="form-group">
                    <label for="txtDescription">Mô tả</label>
                    <textarea class="form-control" name="description" value="{{type.description}}" id="txtDescription" rows="3">{{type.description}}</textarea>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-outline-success" href="/department-officer/provided-info/{{choice}}" role="button">
                    <i class="bi bi-skip-backward-fill"></i>
                    Danh sách
                </a>
                <button id="btnDelete" type="submit" class="btn btn-danger" formaction="/department-officer/provided-info/del/{{choice}}">
                    <i class="bi bi-trash-fill"></i>
                    Xóa
                </button>
                <button id="btnSubmit" type="submit" class="btn btn-primary" formaction="/department-officer/provided-info/patch/{{choice}}">
                    <i class="bi bi-check2"></i>
                    Lưu
                </button>
                <input type="hidden" id="action" value="noAction">
            </div>
        </div>
    </form>
</div>