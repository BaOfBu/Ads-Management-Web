{{#section 'css'}}
    <link rel="stylesheet" href="/static/css/departmentOfficer/district.css">
{{/section}}
{{#section 'js'}}
    <script src="/static/js/wardOfficer/ads_location.js"></script>
{{/section}}
<div class="custom-container">
    <div class="card">
        <div class="custom-card">
            <h5 class="card-header d-flex justify-content-center font-weight-bold">Danh sách các điểm đặt quảng cáo của phường {{wardName}} quận {{districtName}}</h5> 
        </div>
        
    </div>
    <div>
        <div class="card border-dark mt-5">
        <div class="card-header d-flex justify-content-between align-items-center p-3">
            <h5><span class="font-weight-bold">Xem danh sách điểm đặt quảng cáo</span></h5>
            <form id="searchForm" action="" method="post" class="d-flex flex-row col-md-4">
            {{!-- <div class="d-flex flex-row col-md-4"> --}}
                    <input type="hidden" class="form-control col-md-8" id="page" name="page">
                    <input type="text" class="form-control col-md-8" id="keyword" name="keyword" placeholder="Tìm kiếm">
                    <button type="submit" id="submitBtn" class="btn btn-primary form-control col-md-4">Tìm kiếm</button>

            {{!-- </div> --}}
            </form>
        </div>
        {{#if isEmpty}}
            <div class="card-body">Không có dữ liệu</div>
        {{else}}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" class="col-1">
                        <span class="d-flex justify-content-center">#</span>
                    </th>
                    <th scope="col" class="col-3">
                        <span class="d-flex justify-content-center">Địa chỉ</span>
                    </th>
                    <th scope="col" class="col-1">
                        <span class="d-flex justify-content-center">Loại</span>
                    </th>
                    <th scope="col" class="col-2">
                        <span class="d-flex justify-content-center">Hình thức quảng cáo</span>
                    </th>
                    <th scope="col" class="col-2">
                        <span class="d-flex justify-content-center">Tình trạng quy hoạch</span>
                    </th>
                    <th scope="col" class="col-1">
                        <span class="d-flex justify-content-center">Bảng quảng cáo</span>
                    </th>
                    <th scope="col" class="col-2">
                        <span class="d-flex justify-content-center">Yêu cầu chỉnh sửa</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each arrayAdsLocation}}
                <tr>
                    <th scope="row">
                        <span class="d-flex justify-content-center">
                            {{stt}}
                        </span>
                    </th>
                    <td>
                        <span class="d-flex justify-content-center">
                            {{location}}
                        </span>
                    </td>
                    <td>
                        <span class="d-flex justify-content-center">
                            {{location_type_name}}
                        </span>
                    </td>
                    <td>
                        <span class="d-flex justify-content-center">
                            {{ads_type_name}}
                        </span>
                    </td>
                    <td>
                        <span class="d-flex justify-content-center">
                            {{status}}
                        </span>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a class="d-flex justify-content-center align-items-center view-detail mt-1" href="ads/view-detail?adsLocationId={{adsLocationId}}" role="button">
                                <h4><span class="ml-1 badge bg-info text-light rounded-pill">
                                    <i class="fa-solid fa-list"></i> Danh sách</span></h4>
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a class="d-flex justify-content-center align-items-center view-detail mt-1" href="ads/ads-location-edit?adsLocationId={{adsLocationId}}">
                                <h4><span class="ml-1 badge bg-warning text-dark rounded-pill">
                                    <i class="fa-solid fa-code-pull-request"></i> Yêu cầu</span></h4>
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
        <div class="card-footer d-flex justify-content-center">
            <div>
                <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="?page={{previousValue}}&keyword={{oldKeyword}}">Previous</a>
                </li>
                {{#each this.pageNumbers}}
                {{#if isActive}}
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">{{value}}</a>
                </li>
                {{else}}
                <li class="page-item">
                    <a class="page-link" href="?page={{value}}&keyword={{../oldKeyword}}">{{value}}</a>
                </li>
                {{/if}}
                {{/each}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextValue}}&keyword={{oldKeyword}}">Next</a>
                </li>
                </ul>
            </div>
        </div>
        
    </div>
</div>